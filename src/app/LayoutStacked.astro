---
import FooterStacked from './FooterStacked.astro'
import LayoutCommon from './LayoutCommon.astro'
import NavBarStacked from './NavBarStacked.astro'
---

<LayoutCommon>
  <NavBarStacked />

  <div class='flex overflow-hidden bg-gray-100 pt-16 dark:bg-gray-900'>
    <div
      id='main-content'
      class='relative mx-auto h-full min-h-screen w-full max-w-screen-2xl overflow-y-auto bg-gray-100 dark:bg-gray-900'
    >
      <div class='px-4 pt-6 2xl:px-0'>
        <slot />
      </div>

      <FooterStacked />
    </div>
  </div>
</LayoutCommon>
