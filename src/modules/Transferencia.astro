---
import { Switch } from '~/components'

const situacion = [
  'LA EMPRESA REALIZA TRANSFERENCIA DE DATOS PERSONALES INTERNACIONALMENTE?',
  'LA EMPRESA REALIZA TRATAMIENTO DE DATOS PERSONALES A PAÍSES CONSIDERADOS ADECUADOS CONFORME LA NORMATIVA?',
  'LA EMPRESA UTILIZA MECANISMOS ADECUADOS Y TÉCNICOS A LOS FINES DE PROTEGER LOS DATOS PERSONALES?',
  'CUÁLES UTILIZA?',
  'LA EMPRESA UTILIZA (BCRS) NORMAS CORPORATIVA VINCULANTES?',
  'LA EMPRESA UTILIZA CLAÚSULA STANDARDS DE DATOS PERSONALES ADOPTADAS POR LA COMISIÓN EUROPEA?',
  'LA EMPRESA TIENE CERTIFICACIONES DE DATOS PERSONALES Y CIBERSEGURIDAD RECONOCIDAS POR LA AUTORIDAD DE APLICACIÓN?',
  'LA EMPRESA UTILIZA CLÁUSULAS CONTRACTUALES ENTRE RESPONSABLE, ENCARGADO Y AUTORIDADES PÚBLICAS?'
]
---
<head>
  <script type="module" src='/src/scripts/auditoriaExterna.js ' defer is:inline></script>
</head>

<section class='rounded-lg bg-white p-6 shadow-md dark:bg-gray-800'>
  <div class='m-auto flex'>
    <h1
      class='m-auto rounded-lg bg-white p-6 text-4xl font-extrabold text-gray-700 shadow-md dark:bg-gray-800 dark:text-gray-400'
    >
      AUDITORÍA EXTERNA EN MATERIA DE DATOS PERSONALES PARA TODOS LOS
      INTERESADOS, CLIENTES O USUARIOS
    </h1>
  </div>
  <h2 class='mb-4 text-2xl font-semibold text-gray-800 dark:text-white'>
    TRANSFERENCIA INTERNACIONAL DE DATOS PERSONALES
  </h2>
  <form id="datosTransferencia" action='/submit' method='post'>
    {
      situacion.map((pregunta, index) => (
        <Switch id={`switch-${index}`} label={pregunta} />
      ))
    }
    <button
      type='submit'
      class='mt-4 w-full rounded-lg bg-primary-700 px-5 py-3 text-center text-base font-medium text-white hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 sm:w-auto'
    >
      Enviar
    </button>
  </form>
</section>
